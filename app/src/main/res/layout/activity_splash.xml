<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

    <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:pv_background_color="@color/colorPrimary"
            app:pv_host_text="Eric"
            app:pv_host_text_anim_time="600"
            app:pv_particle_text="Ho"
            app:pv_particle_text_size="16sp"
            app:pv_spread_anim_time="200"
            app:pv_text_anim_time="800"
            app:pv_text_color="#FFF" />

</LinearLayout>